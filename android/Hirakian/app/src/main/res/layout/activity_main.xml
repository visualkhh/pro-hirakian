<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:id="@+id/hirakianLayout">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hello World!"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:id="@+id/hirakianText"
            app:layout_constraintVertical_bias="0.911"/>
    <Button

            android:textAllCaps="false"
            android:text="hirakian touch me"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/hirakianBtn"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="124dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="124dp"
    />
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="401dp" tools:srcCompat="@drawable/moon"
            tools:layout_editor_absoluteY="0dp" android:id="@+id/hirakianImg"
            app:srcCompat="@drawable/moon" tools:layout_editor_absoluteX="0dp"/>

</android.support.constraint.ConstraintLayout>